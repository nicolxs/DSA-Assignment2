version: '3'
services:
  # Kafka Service
  kafka:
    build: ./kafka
    container_name: kafka
    ports:
      - "9092:9092"
    environment:
      - KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
      - KAFKA_AUTO_CREATE_TOPICS_ENABLE=false
    networks:
      - healthcare-network

  # Health Admin Service (Include your specialist services here)
  health-admin-service:
    build: ./health-admin-service
    container_name: health-admin-service
    ports:
      - "9090:9090"
    depends_on:
      - kafka
    networks:
      - healthcare-network

networks:
  healthcare-network:
    driver: bridge
